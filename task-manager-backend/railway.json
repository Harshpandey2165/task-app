{
  "name": "task-manager-backend",
  "type": "nodejs",
  "region": "production",
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "DATABASE_URL": "${DATABASE_URL}"
  },
  "build": {
    "cmd": "npm install",
    "dir": "."
  },
  "start": "node dist/main.js",
  "databases": [
    {
      "type": "postgres",
      "name": "task-manager-db"
    }
  ]
}
